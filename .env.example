# Cấu hình Chatbot
DB_FAISS_PATH=./vector_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
TEMPERATURE=0.2
MAX_TOKENS=512
ALLOW_PICKLE=true

# API Configuration
# Sử dụng API thay vì model cục bộ
USE_API=true
# Loại API (google hoặc openai)
API_TYPE=google

# Google API settings
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-1.5-pro

# OpenAI API settings
OPENAI_API_KEY=


OPENAI_MODEL=gpt-4o-mini

API_TIMEOUT=30

# Cấu hình FastAPI
API_HOST=0.0.0.0
API_PORT=8080
DEBUG_MODE=True
PROJECT_NAME=ChatBotKinhTe
API_V1_STR=/api/v1

# Bảo mật
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Settings (Cross-Origin Resource Sharing)
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO

# Chatbot API URL
CHATBOT_API_URL=http://localhost:55050/api/v1/chat/chat-direct

# GPU settings
# Ưu tiên sử dụng GPU nếu có
PRIORITIZE_GPU=True

SKIP_EMBEDDINGS=false

API_TYPE=google
API_PORT=55050
STORAGE_PATH=/app/storage